extends layout

block content
  - var item = account[0]
    h1= item.title

    each box in item.colors
      div.colorBox(style="background-color:#"+ box)
        p= box

    ul
      li= "Total Views: " + item.numViews
      li= "Total Votes: " + item.numVotes
      li= "Rank: " + item.rank
      if(item.description != "")
        li= "Description: " + item.description
      else
        li= "Description: No description given."